<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700" prefWidth="1200" stylesheets="@admindashboard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="enrollmentsystem.AdminDashboardController">

    <children>

        <!-- HEADER -->
        <HBox fx:id="topBar" prefHeight="100" styleClass="top-bar" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <ImageView fitHeight="60" fitWidth="60">
                    <image>
                        <Image url="@images/STARLIGHT%20ACADEMY.png" />
                    </image>
                </ImageView>
                <Label styleClass="title-label" text="ABAKADA UNIVERSITY ENROLLMENT SYSTEM" />
            </children>
        </HBox>

        <!-- MAIN BODY -->
        <HBox spacing="10" styleClass="main-content-container" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="100">

            <!-- SIDEBAR -->
            <VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="250" spacing="15" styleClass="sidebar">
                <ImageView fx:id="adminLogo" fitHeight="100" fitWidth="100" styleClass="student-logo">
                    <image>
                        <Image url="@images/STARLIGHT%20ACADEMY.png" />
                    </image>
                </ImageView>

                <Label fx:id="studentName" styleClass="student-name" text="ADMIN Full Name" />
                <Label fx:id="studentEmail" styleClass="student-email" text="admin@abakada.admin" />
                <Label fx:id="studentId" styleClass="student-id" text="ADMIN" />

                <VBox alignment="CENTER" spacing="10">
                    <HBox alignment="CENTER" styleClass="stat-card">
                        <Label styleClass="stat-title" text="Enrolled" />
                        <Region prefHeight="23.0" prefWidth="66.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="enrolledNoLabel" styleClass="stat-value" text="0" />
                    </HBox>

                    <HBox alignment="CENTER" styleClass="stat-card">
                        <Label styleClass="stat-title" text="Pending Enrollment" />
                        <Region prefHeight="23.0" prefWidth="3.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="pendingEnrollmentLabel" styleClass="stat-value" text="0" />
                    </HBox>

                    <HBox alignment="CENTER" styleClass="stat-card">
                        <Label styleClass="stat-title" text="Pending Payments" />
                        <Region prefHeight="23.0" prefWidth="13.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="pendingPaymentLabel" styleClass="stat-value" text="0" />
                    </HBox>

                    <HBox alignment="CENTER" styleClass="stat-card">
                        <Label prefHeight="18.0" prefWidth="70.0" styleClass="stat-title" text="Paid" />
                        <Region prefHeight="23.0" prefWidth="111.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="paidLabel" styleClass="stat-value" text="0" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- MAIN CONTENT -->
            <VBox fx:id="mainContainer" alignment="TOP_CENTER" spacing="0" styleClass="main-content" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <TabPane fx:id="mainTabPane" styleClass="tab-pane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>

                        <!-- HOME TAB -->
                        <Tab style="-fx-text-fill: #ffffff;" text="Home">
                            <AnchorPane styleClass="tab-content">
                                <children>
                                    <Label layoutX="20" layoutY="20" styleClass="tab-text" />
                                    <TableView fx:id="homeTable" layoutX="40.0" layoutY="12.0" prefHeight="460.0" prefWidth="833.0">

    <columns>
        <TableColumn fx:id="homeColEnrolleeID" editable="false" prefWidth="89.6" text="Enrollee ID" />

        <TableColumn fx:id="homeColStudentName" editable="false" prefWidth="347.20005798339844" text="Enrollee's Name" />

        <TableColumn fx:id="homeColCourse" editable="false" prefWidth="154.4000244140625" text="Program" />

        <TableColumn fx:id="homeColYearLevel" editable="false" prefWidth="80.79998779296875" text="Year" />

        <TableColumn fx:id="homeColAction" editable="false" prefWidth="156.0" text="Action" />

        <!-- Optional empty column to maintain spacing -->
        <TableColumn fx:id="homeColExtra" minWidth="0.0" prefWidth="8.79998779296875" text="" />
    </columns>
</TableView>

                                </children>
                            </AnchorPane>
                        </Tab>

                        <!-- ACCOUNT CREATION TAB -->
                        <Tab text="Account Creation">
                            <AnchorPane styleClass="tab-content">
                                <children>
                                    <Label layoutX="20" layoutY="20" prefHeight="18.0" prefWidth="105.0" styleClass="tab-text" />
                           <StackPane layoutX="20.0" layoutY="14.0">
                              <children>
                                          <TableView fx:id="accountCreationTable" disable="true" prefHeight="467.0" prefWidth="834.0">
                                              <columns>
                                                  <TableColumn fx:id="accColStudentName" prefWidth="241.0" text="Student's Name" />
                                                  <TableColumn fx:id="accColCourse" prefWidth="96.0" text="Course" />
                                                  <TableColumn fx:id="accColAmountPaid" prefWidth="110.0" text="Amount Paid" />
                                                  <TableColumn fx:id="accColAction" prefWidth="120.0" text="Action" />
                                                  <TableColumn fx:id="accColApprovalStatus" prefWidth="148.0" text="Approval Status" />
                                                  <TableColumn fx:id="accColPaymentStatus" prefWidth="118.0" text="Payment Status" />
                                              </columns>
                                    <effect>
                                       <GaussianBlur radius="1.76" />
                                    </effect>
                                          </TableView>
                                 <ImageView fitHeight="347.0" fitWidth="698.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@images/STARLIGHT%20ACADEMY.png" />
                                    </image>
                                 </ImageView>
                                 <Label text="TAB UNDER CONSTRUCTION" textFill="#a94646">
                                    <StackPane.margin>
                                       <Insets top="370.0" />
                                    </StackPane.margin>
                                    <font>
                                       <Font name="System Bold" size="36.0" />
                                    </font>
                                 </Label>
                              </children>
                           </StackPane>
                                </children>
                            </AnchorPane>
                        </Tab>

                    </tabs>
                </TabPane>
            </VBox>

        </HBox>
    </children>
</AnchorPane>
