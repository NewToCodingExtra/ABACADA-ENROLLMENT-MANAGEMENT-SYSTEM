<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="1200" stylesheets="@admindashboard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="enrollmentsystem.AdminDashboardController">

    <children>

        <!-- HEADER -->
        <HBox fx:id="topBar" prefHeight="100" styleClass="top-bar" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <ImageView fitHeight="60" fitWidth="60">
                    <image>
                        <Image url="@images/STARLIGHT%20ACADEMY.png" />
                    </image>
                </ImageView>
                <Label styleClass="title-label" text="ABAKADA ACADEMY ENROLLMENT SYSTEM" />
            </children>
        </HBox>

        <!-- MAIN BODY -->
        <HBox spacing="10" styleClass="main-content-container" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="100">

            <!-- SIDEBAR -->

<VBox fx:id="sidebar" prefWidth="250" alignment="TOP_CENTER" spacing="15" styleClass="sidebar">
    <ImageView fx:id="adminLogo" fitHeight="100" fitWidth="100" styleClass="student-logo">
        <image>
            <Image url="@/images/abakada_logo.png" />
        </image>
    </ImageView>

    <Label text="ADMIN Full Name" styleClass="student-name"/>
    <Label text="admin@abakada.admin" styleClass="student-email"/>
    <Label text="ADMIN" styleClass="student-id"/>

    <VBox spacing="10" alignment="CENTER">
        <HBox alignment="CENTER" styleClass="stat-card">
            <Label text="Enrolled" styleClass="stat-title" />
            <Label text="5" styleClass="stat-value" />
        </HBox>

        <HBox alignment="CENTER" styleClass="stat-card">
            <Label text="Pending Enrollment" styleClass="stat-title" />
            <Label text="5" styleClass="stat-value" />
        </HBox>

        <HBox alignment="CENTER" styleClass="stat-card">
            <Label text="Pending Payments" styleClass="stat-title" />
            <Label text="5" styleClass="stat-value" />
        </HBox>

        <HBox alignment="CENTER" styleClass="stat-card">
            <Label text="Paid" styleClass="stat-title" />
            <Label text="5" styleClass="stat-value" />
        </HBox>
    </VBox>
</VBox>






            <!-- MAIN CONTENT -->
            <VBox fx:id="mainContainer" alignment="TOP_CENTER" spacing="0" styleClass="main-content" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <TabPane fx:id="mainTabPane" styleClass="tab-pane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab style="-fx-text-fill: #ffffff;" text="Home">
                            <AnchorPane styleClass="tab-content">
                                <children>
                                    <Label layoutX="20" layoutY="20" styleClass="tab-text" text="Welcome to your student dashboard!" />
                                </children>
                            </AnchorPane>
                        </Tab>
                        <Tab text="Schedule">
                            <AnchorPane styleClass="tab-content">
                                <children>
                                    <Label layoutX="20" layoutY="20" styleClass="tab-text" text="Your class schedule will appear here." />
                                </children>
                            </AnchorPane>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>

        </HBox>
    </children>
</AnchorPane>
