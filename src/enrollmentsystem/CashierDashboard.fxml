<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="950" prefHeight="550"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="enrollmentsystem.CashierDashboardController"
            stylesheets="@cashierdashboard.css">

    <children>

        <!-- Top Header -->
        <HBox prefHeight="65" prefWidth="950" styleClass="top-bar">
            <children>
                <ImageView fitHeight="45" fitWidth="45" layoutX="20" layoutY="10" style="-fx-padding: 10;">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>
                <Label text="STARLIGHT ACADEMY ENROLLMENT SYSTEM" styleClass="title-label" />
            </children>
        </HBox>

        <!-- Left Sidebar -->
        <VBox layoutX="20" layoutY="90" prefWidth="240" prefHeight="430" styleClass="sidebar" spacing="10" alignment="CENTER">
            <ImageView fitHeight="100" fitWidth="100" styleClass="faculty-logo">
                <image>
                    <Image url="@logo.png" />
                </image>
            </ImageView>

            <Label fx:id="cashierNameLabel" text="Cashier Full Name" styleClass="faculty-name" />
            <Label fx:id="cashierEmailLabel" text="cashiername@starlight.cashier" styleClass="faculty-email" />
            <Label fx:id="cashierRoleLabel" text="CASHIER" styleClass="faculty-role" />

            <VBox alignment="CENTER" spacing="10" styleClass="stats-box">
                <Label text="Pending Payments" styleClass="stats-title"/>
                <Label fx:id="pendingPaymentsLabel" text="5" styleClass="stats-value"/>
            </VBox>

            <VBox alignment="CENTER" spacing="10" styleClass="stats-box">
                <Label text="Paid" styleClass="stats-title"/>
                <Label fx:id="paidLabel" text="5" styleClass="stats-value"/>
            </VBox>
        </VBox>

        <!-- Main Content (AnchorPane for free resizing) -->
        <AnchorPane layoutX="280" layoutY="90" prefWidth="640" prefHeight="430" styleClass="content-pane">

            <Label text="Home" layoutX="20" layoutY="10"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0a1a3a;" />

            <TableView fx:id="paymentTable"
                       layoutX="20" layoutY="50"
                       prefWidth="600" prefHeight="350"
                       AnchorPane.topAnchor="50" AnchorPane.leftAnchor="20"
                       AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

                <columns>
                    <TableColumn text="Student's Name" prefWidth="150" />
                    <TableColumn text="Course" prefWidth="120" />
                    <TableColumn text="Amount to Pay" prefWidth="120" />
                    <TableColumn text="Action" prefWidth="100" />
                    <TableColumn text="Admin Approval" prefWidth="120" />
                    <TableColumn text="Payment Status" prefWidth="120" />
                </columns>

            </TableView>

        </AnchorPane>

    </children>
</AnchorPane>
