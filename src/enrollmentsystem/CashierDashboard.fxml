<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="1200" stylesheets="@cashierdashboard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="enrollmentsystem.CashierDashboardController">

    <children>

        <!-- HEADER -->
        <HBox fx:id="topBar" prefHeight="100" styleClass="top-bar" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <ImageView fitHeight="60" fitWidth="60">
                    <image>
                        <Image url="@images/STARLIGHT%20ACADEMY.png" />
                    </image>
                </ImageView>
                <Label styleClass="title-label" text="ABAKADA UNIVERSITY ENROLLMENT SYSTEM" />
            </children>
        </HBox>

        <!-- MAIN BODY -->
        <HBox spacing="10" styleClass="main-content-container" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="100">

            <!-- SIDEBAR -->

<VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="250" spacing="15" styleClass="sidebar">
    <ImageView fx:id="adminLogo" fitHeight="100" fitWidth="100" styleClass="student-logo">
        <image>
            <Image url="@images/STARLIGHT%20ACADEMY.png" />
        </image>
    </ImageView>

    <Label styleClass="student-name" text="Cashier Full Name" />
    <Label styleClass="student-email" text="cashier@abakada.cashier" />
    <Label styleClass="student-id" text="CASHIER" />

    <VBox alignment="CENTER" spacing="50">
        <HBox alignment="CENTER" prefHeight="90.0" prefWidth="210.0" styleClass="stat-card">
            <Label minWidth="-Infinity" styleClass="stat-title" text="Pending Payments" />
            <Label styleClass="stat-value" text="5" />
        </HBox>

        <HBox alignment="CENTER" prefHeight="91.0" prefWidth="210.0" styleClass="stat-card">
            <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="18.0" prefWidth="150.0" styleClass="stat-title" text="Paid" />
            <Label styleClass="stat-value" text="5" />
        </HBox>

     
    </VBox>
</VBox>






            <!-- MAIN CONTENT -->
            <VBox fx:id="mainContainer" alignment="TOP_CENTER" spacing="0" styleClass="main-content" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <TabPane fx:id="mainTabPane" styleClass="tab-pane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab style="-fx-text-fill: #ffffff;" text="Home">
                            <AnchorPane styleClass="tab-content">
                        <children>
                           <TableView layoutX="40.0" layoutY="12.0" prefHeight="460.0" prefWidth="753.0">
                              <columns> 
                                 <TableColumn prefWidth="241.0" text="Student's Name" />
                               <TableColumn minWidth="0.0" prefWidth="96.0" text="Course" />
                               <TableColumn minWidth="0.0" prefWidth="110.0" text="Amount Paid" />
                               <TableColumn minWidth="0.0" prefWidth="120.0" text="Action" />
                               <TableColumn minWidth="0.0" prefWidth="148.0" text="Approval Status" />
                               <TableColumn minWidth="0.0" prefWidth="118.0" text="Payment Status" />
                              </columns>
                           </TableView>
                        </children>
                            </AnchorPane>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>

        </HBox>
    </children>
</AnchorPane>
