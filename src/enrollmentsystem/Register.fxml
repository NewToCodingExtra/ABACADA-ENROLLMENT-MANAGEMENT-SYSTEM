<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="467.0" prefWidth="592.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="enrollmentsystem.SigupUIController">
    <children>


        <VBox id="registerContainer" alignment="CENTER" layoutX="20.0" layoutY="36.0" prefHeight="397.0" prefWidth="556.0" spacing="10">
            
            <!-- Title -->
            <HBox id="registerTitleBox" alignment="CENTER" prefWidth="472.0" />
   
               <!-- Form Fields -->
            <VBox alignment="CENTER_LEFT" prefHeight="247.0" prefWidth="556.0" spacing="6">
   
                   <!-- Validation Labels -->
                <Label fx:id="UsernameValidationText" styleClass="validationLabel" />
   
                   <Label text="Username:" />
                <TextField fx:id="uNameTextField" promptText="example@studentemail.edu.ph" />
   
                   <Label text="Email:" />
                <TextField fx:id="emailTextField" promptText="example@studentemail.edu.ph" />
   
                   <Label text="Password:" />
                <PasswordField fx:id="fPassField" promptText="************" />
   
                   <Label text="Re-input password:" />
                <PasswordField fx:id="sPassField" promptText="************" />
   
                   <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-spacing: 3;">
                    <CheckBox fx:id="checkAcceptTermsAndConditionBtn" />
                    <Label id="termsLabel" fx:id="termsAndConditon" prefHeight="17.0" prefWidth="62.0" text="Accept our " />
               <Hyperlink prefHeight="23.0" prefWidth="126.0" text="Terms and Conditions" />
                </HBox>
                <Label fx:id="EmailValidationText" styleClass="validationLabel" />
                <Label fx:id="PasswordLengthValidation" styleClass="validationLabel" />
                <Label fx:id="PasswordMatchValidation" styleClass="validationLabel" />
            </VBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15">
            <VBox>
               <children>
                  <BorderPane>
                     <center>
                        <HBox>
                           <children>
                                  <Button id="cancelButton" fx:id="cancelButton" prefHeight="25.0" prefWidth="63.0" text="Cancel" />
                           </children>
                        </HBox>
                     </center>
                  </BorderPane>
               </children>
            </VBox>
                <Button id="registerButton" fx:id="createAccountBtn" onAction="#createAccountBtnAction" text="Register" />
            </HBox>
   
               <Label fx:id="LogInHere" onMouseClicked="#LogInClicked" text="Already have an account?" textFill="#00205B" />
        </VBox>
          <Label id="registerLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="253.0" layoutY="23.0" prefHeight="34.0" prefWidth="97.0" text="Register">
         <font>
            <Font name="Montserrat Light" size="21.0" />
         </font>
      </Label>
      <Hyperlink layoutX="267.0" layoutY="433.0" prefHeight="23.0" prefWidth="70.0" text="Login here" />
    </children>

    <stylesheets>
        <URL value="@signupui.css" />
    </stylesheets>
</AnchorPane>
